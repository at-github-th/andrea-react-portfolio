@tailwind base;
@tailwind components;
@tailwind utilities;

/* ---- Site baseline ---- */
:root{
  --content-max: 1280px; /* bump to 1440px later if you want */
  --g1:#0b1225;
  --g2:#0e162f;
  --accent:#66f2d5;
}

/* Smooth anchor scrolling */
html { scroll-behavior: smooth; }

/* One, unified background */
html,body,#root {
  min-height: 100%;
  background: radial-gradient(1200px 800px at 50% -10%, rgba(102,242,213,0.08), transparent 55%),
              radial-gradient(1200px 800px at 80% 110%, rgba(102,242,213,0.06), transparent 55%),
              linear-gradient(180deg, var(--g1), var(--g2));
  color: rgb(226 232 240); /* slate-200-ish */
}

/* Sections are centered and responsive */
.section{
  width: min(var(--content-max), 94vw);
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
  padding-top: 3rem;
  padding-bottom: 3rem;
}

/* Headings */
.section h2{
  text-align: center;
  font-size: clamp(1.5rem, 2vw + 1rem, 2.25rem);
  letter-spacing: 0.08em;
  font-weight: 600;
  margin-bottom: 1.5rem;
}

/* Cards + glow */
.card{
  background: rgba(12,18,37,0.7);
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 16px;
  box-shadow: 0 0 0 0 rgba(102,242,213,0);
  transition: box-shadow .25s ease, transform .25s ease, border-color .25s ease;
}
.card:hover{
  box-shadow: 0 0 48px 0 rgba(102,242,213,0.18);
  border-color: rgba(102,242,213,0.32);
  transform: translateY(-2px);
}

/* Tiny badges for tech chips */
.badge{
  font-size: 10px;
  letter-spacing: .12em;
  text-transform: uppercase;
  padding: 2px 8px;
  border-radius: 9999px;
  border: 1px solid rgba(255,255,255,0.22);
  background: rgba(255,255,255,0.03);
}

/* FloatUI buttons look consistent on dark bg */
.float-btn{
  border-radius: 9999px;
  border: 1px solid rgba(255,255,255,0.1);
  background: rgba(15,23,42,0.7);
  backdrop-filter: blur(6px);
  box-shadow: 0 6px 20px rgba(0,0,0,0.28);
}

/* 3D cube base styles (component adds transforms) */
.perspective{ perspective: 1000px; }
.cube{ position: relative; transform-style: preserve-3d; height: 220px; width: 220px; margin: 0 auto; }
.cube-face{
  position: absolute; inset: 0; display: flex; align-items: center; justify-content: center;
  border: 1px solid rgba(255,255,255,0.12); border-radius: 10px;
  background: rgba(22,30,55,0.45); backdrop-filter: blur(3px);
  font-weight: 600; letter-spacing: .06em;
}
/* layout polish */
:root{--content-max:1200px}@media(min-width:1536px){:root{--content-max:1400px}}
#root,main,section,.section{max-width:var(--content-max);margin-left:auto;margin-right:auto;padding-left:1rem;padding-right:1rem}
.section h2,.section h3,.section .title{text-align:center}
